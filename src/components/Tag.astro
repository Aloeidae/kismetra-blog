---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${encodeURIComponent(tag.toLowerCase())}`} aria-label={tag}>
	<span class="bg-[var(--gold-accent)] dark:bg-[var(--gold-accent)] font-semibold text-[var(--midnight-blue)] dark:text-[var(--midnight-blue)] shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full">
		{tag ?? 'Blog Tag'}
	</span>
</a>
