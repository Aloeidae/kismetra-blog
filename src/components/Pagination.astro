---
import ArrowLeft from './icons/ArrowLeft.astro'
import ArrowRight from './icons/ArrowRight.astro'

const { page } = Astro.props
---

<div class="flex gap-5 md:gap-1 justify-around md:justify-end">
	{page.start > 0 && (
		<a
			href={page.url.prev}
			class="flex items-center justify-center px-8 md:px-4 h-10 text-base font-medium text-[var(--text-dark)] bg-[var(--off-white)] border border-[rgba(14,26,49,0.2)] rounded-lg hover:bg-[rgba(14,26,49,0.05)] hover:text-[var(--midnight-blue)] transition-colors duration-150 ease-linear dark:bg-[var(--midnight-blue)] dark:border-[var(--gold-accent)] dark:text-[var(--text-light)] dark:hover:bg-[var(--gold-accent)] dark:hover:text-[var(--midnight-blue)]"
		>
			<ArrowLeft />
		</a>
	)}

	{page.currentPage < page.lastPage && (
		<a
			href={page.url.next}
			class="flex items-center justify-center px-8 md:px-4 h-10 ml-3 text-base font-medium text-[var(--text-dark)] bg-[var(--off-white)] border border-[rgba(14,26,49,0.2)] rounded-lg hover:bg-[rgba(14,26,49,0.05)] hover:text-[var(--midnight-blue)] transition-colors duration-150 ease-linear dark:bg-[var(--midnight-blue)] dark:border-[var(--gold-accent)] dark:text-[var(--text-light)] dark:hover:bg-[var(--gold-accent)] dark:hover:text-[var(--midnight-blue)]"
		>
			<ArrowRight />
		</a>
	)}
</div>
