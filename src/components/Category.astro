---
import { cn, sluglify } from '@/utils'

const { name = 'View All', activeCategory } = Astro.props
const currentPath = Astro.url.pathname
const unsluglifyNameCategory = sluglify(name.toLowerCase())

const isActive =
	activeCategory?.toLocaleLowerCase() === unsluglifyNameCategory ||
	(currentPath === '/' && name === 'View All')
---

<a
	href={name === 'View All' ? '/' : sluglify(`/category/${unsluglifyNameCategory}/1`)}
	class={cn(
		`text-[var(--text-dark)] dark:text-[var(--text-light)] pb-2.5 first-letter:uppercase font-medium hover:text-[var(--midnight-blue)] border-b-2 border-opacity-0 dark:border-opacity-0 border-[var(--text-dark)] dark:border-[var(--text-light)] dark:hover:border-[var(--text-light)] hover:border-opacity-100 transition-colors duration-150 ease-linear`,
		isActive &&
			`border-[var(--text-dark)] border-b-2 text-[var(--text-dark)] z-10 dark:border-[var(--text-light)] dark:text-[var(--text-light)] dark:border-opacity-100 border-opacity-100`
	)}
>
	{name}
</a>
